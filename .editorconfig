# top-most EditorConfig file
root = true

# ==============================
# Global defaults
# ==============================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ==============================
# C# code style (.NET 8)
# ==============================
[*.cs]
# Use file-scoped namespaces
csharp_style_namespace_declarations = file_scoped:suggestion

# Prefer var when the type is obvious
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion
csharp_style_var_for_built_in_types = true:suggestion

# Expression-bodied members
csharp_style_expression_bodied_methods = true:suggestion
csharp_style_expression_bodied_properties = true:suggestion

# Braces
csharp_prefer_braces = true:warning

# New lines & formatting
insert_final_newline = true
end_of_line = lf
indent_size = 4

# Naming conventions
dotnet_naming_rule.private_members_should_be_camelcase.severity = suggestion
dotnet_naming_rule.private_members_should_be_camelcase.symbols = private_members
dotnet_naming_rule.private_members_should_be_camelcase.style = camelcase

dotnet_naming_symbols.private_members.applicable_accessibilities = private
dotnet_naming_symbols.private_members.applicable_kinds = field
dotnet_naming_style.camelcase.capitalization = camel_case

# Using directives
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# Qualify style
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion

# ==============================
# JSON & YAML
# ==============================
[*.{json,yml,yaml}]
indent_size = 2

# ==============================
# SQL scripts
# ==============================
[*.sql]
indent_size = 4
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true

# ==============================
# Markdown & docs
# ==============================
[*.{md,txt}]
trim_trailing_whitespace = false
insert_final_newline = true
